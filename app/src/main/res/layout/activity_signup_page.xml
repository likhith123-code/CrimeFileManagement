<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".signupPage">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:textColor="@color/colorPrimary"
                android:textSize="30sp"
                android:textStyle="bold"
                android:text="Register Now"
                android:layout_gravity="center_horizontal">
            </TextView>

            <EditText
                android:layout_width="300dp"
                android:id="@+id/signupusername"
                android:layout_height="40dp"
                android:hint="Enter UserName"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:padding="10dp"
                android:maxLines="1"
                android:inputType="text"
                android:background="@drawable/background_input"
                android:textColor="@color/colortextPrimary"
                android:drawableLeft="@drawable/ic_baseline_group_24"/>

            <EditText
                android:layout_width="300dp"
                android:id="@+id/signupfullname"
                android:layout_height="40dp"
                android:inputType="text"
                android:maxLines="1"
                android:hint="Enter Full Name"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:padding="10dp"
                android:background="@drawable/background_input"
                android:textColor="@color/colortextPrimary"
                android:drawableLeft="@drawable/ic_baseline_lock_24"/>

            <EditText
                android:layout_width="300dp"
                android:id="@+id/signuppassword"
                android:layout_height="40dp"
                android:inputType="textPassword"
                android:hint="Enter Password"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:padding="10dp"
                android:maxLines="1"
                android:background="@drawable/background_input"
                android:textColor="@color/colortextPrimary"
                android:drawableLeft="@drawable/ic_baseline_lock_24"/>


            <EditText
                android:layout_width="300dp"
                android:id="@+id/mobilenumber"
                android:layout_height="40dp"
                android:inputType="number"
                android:hint="Enter Mobile Number"
                android:textAlignment="center"
                android:maxLength="10"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:padding="10dp"
                android:maxLines="1"
                android:background="@drawable/background_input"
                android:textColor="@color/colortextPrimary"
                android:drawableLeft="@drawable/ic_baseline_phone_android_24"/>


            <EditText
                android:layout_width="300dp"
                android:id="@+id/aadhaarnumber"
                android:layout_height="40dp"
                android:inputType="number"
                android:hint="Enter Aadhaar Number"
                android:textAlignment="center"
                android:maxLength="12"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:padding="10dp"
                android:maxLines="1"
                android:background="@drawable/background_input"
                android:textColor="@color/colortextPrimary"
                android:drawableLeft="@drawable/ic_baseline_credit_card_24"/>

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:textAlignment="center"
                android:textColor="@color/teal_700"
                android:text="Note : Aadhaar Number and UserName cannot be changed once registered" />

            <Button
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:background="@drawable/backgroundbutton"
                android:layout_marginTop="20dp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:text="Sign Up"
                android:onClick="register"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:textSize="18dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colortextSecondary"
                android:layout_marginTop="10dp"
                android:text="Already have account?"
                android:textSize="18sp"
                android:layout_gravity="center_horizontal">
            </TextView>
            <Button
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:background="@drawable/backgroundbutton"
                android:layout_marginTop="20dp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:text="Sign In"
                android:onClick="login"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:textSize="18dp"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>