<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FileComplaint">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Register Complaint"
            android:textStyle="bold"
            android:textColor="#4E195C"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:padding="10dp"
            android:textSize="20dp"
            android:layout_margin="10dp"/>

        <ImageView
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/image_view1"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Images"
            android:layout_margin="20dp"
            android:textAlignment="center"
            android:onClick="choosemultiple"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:text="Attach proof ( mandatory ) " />

        <Spinner
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/complaintType" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:maxLines="1"
            android:inputType="text"
            android:hint="Enter the crime location"
            android:textAlignment="center"
            android:background="@drawable/background_input"
            android:layout_gravity="center_horizontal"
            android:id="@+id/crimeArea" />

        <EditText
            android:minLines="4"
            android:singleLine="false"
            android:lines="8"
            android:id="@+id/descriptionmultiple"
            android:scrollbars="vertical"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:textAlignment="center"
            android:inputType="textMultiLine"
            android:background="@drawable/background_input"
            android:hint="Enter Description"
            android:layout_gravity="center_horizontal"
            />

        <Button
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:text="Register Now"
            android:onClick="uploadmultiple"
            android:layout_margin="30dp"
            android:background="@drawable/backgroundbutton"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:textAlignment="center"/>



    </LinearLayout>

</ScrollView>