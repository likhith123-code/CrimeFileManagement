<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:background="@drawable/background_input2"
    android:layout_gravity="center_horizontal">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <ImageView
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:padding="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="10dp"
                android:id="@+id/statuspersonimage"

                android:layout_marginRight="10dp"
                android:layout_marginLeft="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/statuscomplaint"
                    android:text="Pending"
                    android:textSize="13dp"
                    android:textColor="@color/black"
                    android:layout_margin="10dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/statusdate"
                    android:text="Current Date"
                    android:textSize="13dp"
                    android:textColor="@color/black"
                    android:layout_margin="10dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/statustype"
                    android:text="Type of complaint"
                    android:textSize="13dp"
                    android:layout_margin="10dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/statuszone"
                    android:text="East Zone"
                    android:textSize="13dp"
                    android:layout_margin="10dp"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/statuscomplaintid"
                    android:text="Random ID"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:layout_margin="10dp" />

                </LinearLayout>

        </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:layout_gravity="center_horizontal">

                <Button
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Withdraw Complaint"
                    android:background="@drawable/background_input2"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp"
                    android:id="@+id/withdrawcomplaintbutton"/>
                <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Delete Item"
                android:background="@drawable/background_input2"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:id="@+id/deletecomplaintbutton"/>

            </LinearLayout>

</LinearLayout>