<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserLoggedIn"
    android:background="#F1F1F1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp"
        android:layout_margin="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:padding="10dp"
                android:text="Logout"
                android:onClick="signoutbutton"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="#4A4638"
                android:layout_alignParentRight="true" />


        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dashboard"
            android:textColor="#040405"
            android:textSize="30sp"
            android:fontFamily="sans-serif"
            android:padding="10dp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@drawable/corners"
            android:onClick="newcomplaint"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_height="110dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="10dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/complaint"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register New Complaint"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#162014"
                android:layout_alignParentRight="true"
                android:padding="10dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="#99C8DCCF"
            android:layout_marginTop="20dp"
            android:onClick="complaintstatus"
            android:layout_marginBottom="20dp"
            android:layout_height="110dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_baseline_pending_actions_24"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Check Complaint Status"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#162014"
                android:layout_alignParentRight="true"
                android:padding="10dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="#9979CFC5"
            android:layout_marginTop="20dp"
            android:onClick="viewprofile"
            android:layout_marginBottom="20dp"
            android:layout_height="110dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/profileimage"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View My Profile"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#162014"
                android:layout_alignParentRight="true"
                android:padding="10dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="#99D8ADE4"
            android:onClick="checklatestnews"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_height="110dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/news"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Check Latest News"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#162014"
                android:layout_alignParentRight="true"
                android:padding="10dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="#99CCBFC5"
            android:layout_marginTop="20dp"
            android:onClick="mostwantedpage"
            android:layout_marginBottom="20dp"
            android:layout_height="110dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/mostwanted"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Most Wanted Persons"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#162014"
                android:layout_alignParentRight="true"
                android:padding="10dp" />

        </RelativeLayout>

    </LinearLayout>

</ScrollView>